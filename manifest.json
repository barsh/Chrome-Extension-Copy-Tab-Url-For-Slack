{
    "manifest_version": 3,
    "name": "Copy Tab URL for Slack, Teams, Email",
    "description": "Copies the current tab URL and title to the clipboard for sharing in Slack, Teams, and Email.",
    "version": "1.0",
    "permissions": ["activeTab", "clipboardWrite", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+C"
        }
      }
    }
  }
  